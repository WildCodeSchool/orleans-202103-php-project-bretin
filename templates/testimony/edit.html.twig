{% extends 'layout_admin.html.twig' %}

{% block title %}Admin Editer un Témoignage{% endblock %}

{% block body %}
{{ form_start(form) }}
    <div class="d-flex justify-content-center">
        <div class="row col-lg-6 col-md-8 mb-4 fw-bold">
            {% block form_row %}
                    <div class="form_row p-2">
                {{ form_label(form.name, 'Nom') }}
                    </div>
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
                    <div class="form_row p-2">
                {{ form_label(form.age, 'Âge') }}
                    </div>
                {{ form_widget(form.age) }}
                {{ form_errors(form.age) }}
                     <div class="form_row p-2">
                {{ form_label(form.message, 'Message') }}
                    </div>
                {{ form_widget(form.message) }}
                {{ form_errors(form.message) }}
                    <div class="form_row p-2">
                {{ form_label(form.date, 'Date') }}
                    </div>
                {{ form_widget(form.date) }}
                {{ form_errors(form.date) }}
                <div class = "row">
                    <div class="col-6 p-3">
                        <button class="btn btn-primary text-light">{{ button_label|default('Enregistrer') }}</button>
                    </div>
                </div>
            {% endblock form_row %}
        </div>
    <div>
{{ form_end(form) }}
{% endblock %}
