{% block title %}Admin Ajout d'un Témoignage{% endblock %}

{% block body %}

{{ form_start(form) }}
    <div class="d-flex justify-content-center">
        <div class="row col-lg-6 col-md-8 mb-4 fw-bold">
            {% block form_row %}

                    <div class="form_row p-2">
                {{ form_label(form.name) }}
                    </div>
                {{ form_widget(form.name) }}
