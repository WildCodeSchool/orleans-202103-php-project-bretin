{% extends 'base.html.twig' %}

{% block title %}Testimony index{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <div class="row col-lg-6 col-md-8 mb-4">

    <h1 class="border text-center">Testimony index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Age</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for testimony in testimonies %}
            <tr>
                <td>{{ testimony.date|date("d/m/Y") }}</td>
                <td>{{ testimony.name }}</td>
                <td>{{ testimony.age }}</td>
                <td>{{ testimony.message }}</td>
                <td>
                    <div class="btn btn-primary bg-light">
                        <a href="{{ path('testimony_show', {'id': testimony.id}) }}">Fiche Patient</a>
                    </div>
                    <div class="btn btn-primary bg-light">
                        <a href="{{ path('testimony_edit', {'id': testimony.id}) }}">Editer</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class = "d-flex justify-content-end m-3 p-3">
        <a class="btn btn-primary" href="{{ path('testimony_new') }}">Ajout Témoignage</a>
    </div>
<div>
{% endblock %}


        
 