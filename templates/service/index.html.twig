{% extends 'layout_admin.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center">
		<div class="service-admin row col-lg-6 col-md-8 mb-4">
			<h1 class ="mt-5 text-center">Liste de mes services pour particuliers</h1>

			<table class="table border text-center m-4">
				<thead>
					<tr class="bg-primary">
						<th>Nom</th>
						<th>Prix</th>
						<th>Prix n°2</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for service in services %}
						<tr>
							<td>{{ service.name }}</td>
							<td>{{ service.price }}</td>
							<td>{{ service.price2 }}</td>
							<td class="d-flex justify-content-around">
								<div class="mx-2 px-3">
									<a href="{{ path('service_edit', {'id': service.id}) }}" class="btn btn-primary text-light">Modifier</a>
								</div>
								{{ include('service/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">aucun enregistrement trouvé</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<div class="d-flex justify-content-end m-3 p-3">
				<a class="btn btn-primary" href="{{ path('service_new') }}">Nouveau service</a>
			</div>
		</tbody>
	</table>
{% endblock %}
