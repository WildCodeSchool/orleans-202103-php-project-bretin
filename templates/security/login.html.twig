{% extends 'base.html.twig' %}
{% block navbar %}
    {% include 'Includes/_navbar.html.twig' %}
{% endblock %}

{% block title %}Cabinet Bretin - Admin - Connexion{% endblock %}

{% block body %}
    <header class="container-fluid m-3 p-5">
    </header>
    <main class="container-fluid col-md-4 p-5">
    <div class = "fw-bold text-center">
        <p class = "titre">Connexion à l'interface d'administration</p>
    </div>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="Email" id="inputEmail" class="form-control" autocomplete="email" required autofocus><br>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required><br>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-lg btn-primary w-100" type="submit">Se connecter</button>
        </form>
        <div class ="d-flex justify-content-center p-4">
            <a href="/user/reset">Mot de passe oublié</a>
        </div>
    </main>
{% endblock %}
