<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		{% for testimony in testimonies %}
			<div class="carousel-item {{ loop.index == 1 ? 'active' : '' }}">
				<h2 class="carousel-inner pt-4 mb-3 ">TÃ‰MOIGNAGES</h2>
				<div class="container-fluid px-5 pb-5 fw-bold">
					<img src="{{ asset('build/images/qwote.aa82f259.png') }}" class="quotes-testimony" alt="Quotes">
					{{ testimony.message }}<br>
					{{ testimony.name }},
					{{ testimony.age }} ans.
					Le {{ testimony.date|date("d/m/Y") }}.
				</div>
			</div>
		{% endfor %}
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
		<span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
		<span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>
